// vim: ts=2 sts=2 sw=2 et ai
/******************************************************
 * reset
 *****************************************************/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  font: inherit
  vertical-align baseline

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1

ol, ul
  list-style none

*
  box-sizing border-box

/******************************************************
 * styling
 *****************************************************/

noselect()
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select none
  cursor default

base = #F0F0F

html, body
  width 100%
  height 100%

body
  //font-family 'Lucida Grande', 'Segoe UI', 'Ubuntu', 'sans-serif'
  font-family 'Open Sans'
  font-size 10pt
  display flex
  flex-direction column
  overflow hidden
  background-color #FDFDFD

#header-row
  position relative
  min-height 120px
  max-height 120px
  width 100%
  h1
    font-family 'Open Sans'
    font-weight 300
    color lighten(#000, 25%)
    font-size 38pt
    position absolute
    left 310px
    top 36px
    display inline-block

#main-row
  height 100%
  width 100%
  display flex
  flex-direction column

.tabs
  min-height 31px
  max-height 31px
  width 100%
  padding 0px 10px
  display flex
  flex-direction row
  border-bottom 1px solid #D0D0D0

.tab-link
  noselect()
  cursor pointer
  font-weight 300
  font-size 12pt
  border-top-left-radius 7px
  border-top-right-radius 7px
  line-height 30px
  background-color #F0F0F0
  border-top 1px solid transparent
  border-left 1px solid transparent
  border-right 1px solid transparent
  padding 0px 10px
  margin 0px 2px
  &:last-child
    margin-right 0
  &:first-child
    margin-left 0
  &:hover
    background-color #E0E0E0
  &.tab-active
    position relative
    border 1px solid #D0D0D0
    border-bottom none
    background-color #FFFFFF
    &:after
      content ''
      position: absolute
      height 1px
      width 100%
      left 0px
      bottom -1px
      background inherit

.tab-spacer
  noselect()
  width 100%

#footer-row
  noselect()
  border-top 1px solid #D0D0D0
  min-height 20px
  max-height 20px
  width 100%
  div
    padding-left 4px
    padding-right 7px
    line-height 19px
    display inline-block
    font-size 9pt
    border-right 1px solid #D0D0D0
    &:last-child
      border-right 1px solid transparent
  .warning
    color darken(orange, 20%)
  .error
    font-weight 700
    background-color darken(red, 20%)
    color #000

#tab-content
  padding 0 10px
  height 100%
  overflow hidden

.tab-view
  position relative
  width 100%
  height 100%

button
  padding 2px 5px
  font-size 10pt
  background-color #FFFFFF
  border-radius 5px
  border 1px solid #C0C0C0
  &:hover:enabled
    background-color #F0F0F0
  &:active:enabled
    background-color #E0E0E0

button, input
  outline none
  border 1px solid #C0C0C0
  font-size 11pt
  &:focus
    box-shadow 0 0 1px 1px lighten(blue, 70%)

/************************
 * db tab
 ***********************/

#db-container
  width 100%
  height 100%
  line-height 30px
  padding-top 10px
  overflow-y auto
  .spacer
    min-height 20px
    max-height 20px
.db-section
  font-weight 700
  font-size 11pt
  color #666
  border-bottom 1px solid #E0E0E0
  margin-bottom 10px
  margin-top 20px
  &:first-child
    margin-top 5px
.db-drop
  noselect()
  display inline-block
  width 200px
  height 30px
  line-height 10px
  text-align center
  background-color #FFF
  border 5px dotted #D0D0D0
  margin-right 10px
  padding 5px
#db-load
  margin-right 10px

/************************
 * team tab
 ***********************/

#team-container
  width 100%
  height 100%
  overflow hidden
  display flex
  flex-direction column
  font-size 11pt
  select
    font-size 11pt
#team-controls
  width 100%
  min-height 40px
  max-height 40px
  padding 10px 0px
  button
    margin-right 10px
.team-id
  color #707070
#team-table
  width 100%
  height 100%

.dropdownmulti-menu
  margin-top 3px
  border 1px solid #D0D0D0
.dropdownmulti-item
  noselect()
  padding 3px
  background-color #FFF
  &:hover
    background-color #F0F0F0

/************************
 * constraints tab
 ***********************/

#rules-container
  width 100%
  height 100%
  display flex
  flex-direction row
#rules-help
  padding 2px 2px
  width 40%
  min-height 100%
  max-height 100%
  background-color #F0F0F0
  overflow-y auto
  border-left 1px solid #D0D0D0
  line-height 1.2em
  h1
    font-size 13pt
    font-weight 700
    color #333
    padding-bottom 5px
  .command
    text-decoration underline
    //padding-top 10px
#rules-editor
  min-width 60%
  max-width 60%
  height 100%
  position relative
#rules-editor-edit, #rules-overlay
    padding 0
    margin 0
    font-size 11pt
    line-height 12pt
#rules-editor-edit
  border none
  border-left 1px solid #D0D0D0
  padding-left 2px
  padding-right 2px
  width 100%
  height 100%
  resize none
  &:focus, &:active
    outline none
#rules-editor-overlay
  overflow hidden
  pointer-events  none
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%
  .message
    position absolute
    padding 2px
    border-radius 4px
    border 1px solid #D0D0D0
    background-color #404040
    color #E0E0E0
  .error
    height 12pt
    width 100%
    background-color red
    opacity 0.1
    position absolute

/************************
 * matching tab
 ***********************/

#match-container
  width 100%
  height 100%
  display flex
  flex-direction column
#match-controls
  width 100%
  display flex
  min-height 30px
  max-height 30px
  padding 3px 0px
  & button
    margin-right 10px
#match-labels
  width 100%
  min-height 15pt
  max-height 15pt
  div
    font-size 11pt
    line-height 13pt
#match-table
  width 100%
  height 100%
#match-table tbody td.cook
  text-decoration underline
#match-table td.cook
  border-left 1px solid #D0D0D0
  &:first-child
    border-left none
#match-score
  display inline-block
  width 150px
  &.outdated
    color darken(orange, 35%)
#match-state
  display inline-block
  width 150px
  &.outdated
    color darken(orange, 35%)

/************************
 * map tab
 ***********************/

#map-container
  position relative
  width 100%
  height 100%

#map-search-container
  position relative
  width 100%
  height 30px
  padding 3px 0
  display flex
  flex-direction row
#map-search-label
  border-top-left-radius 4px
  border-bottom-left-radius 4px
  border 1px solid #D0D0D0
  border-right none
  //background-color #F0F0F0
  color #606060
  font-size 12pt
  padding 3px 5px
#map-search
  width 100%
  display inline-block
  border 1px solid #D0D0D0
  border-top-right-radius 4px
  border-bottom-right-radius 4px
  font-size 12pt
  padding 2px 5px
#map-search-result
  noselect()
  font-size 10pt
  position absolute
  right 5px
  top 9px
  color #606060
  &.too-far
    background-color inherit
    color #c53939

#map-undo
  position absolute
  right 10px
  top 40px
  z-index 999

.map-marker-icon
  border-radius 4px
  background-color #222
  border 1px solid #ddd
  color #ddd
  padding 0 2px
  font-size 10pt
  white-space nowrap

/************************
 * mails
 ***********************/

#mail-container
  width 100%
  height 100%

#mail-ctrl
  margin 0
  width 100%
  display flex
  flex-direction row
  height 30px
  padding 3px 0
  *
    height 100%
    font-size 11pt
  .label
    padding 0 5px
    margin 0
    box-sizing border-box
    line-height 20px
    display inline-block
    border 1px solid #D0D0D0
    border-right none
    border-top-left-radius 4px
    border-bottom-left-radius 4px
  button
    margin-left 10px
  .spacer
    flex-grow 2
  input
    border-top-right-radius 4px
    border-bottom-right-radius 4px
    margin-right 10px

#mail-editor
  border 1px solid #D0D0D0
  border-bottom none
  padding-left 2px
  padding-right 2px
  width 100%
  height calc(100% - 30px);
  resize none
  outline none
  font-size 11pt

#mail-login-user
  height 2em

#mail-login-pass
  height 2em

/************************
 * context menu
 ***********************/

.contextmenu
  noselect()
  position absolute
  border 1px solid #808080
  border-radius 4px
  background-color #F0F0F0
  z-index 200
.contextmenu-separator
  line-height normal
.contextmenu-item
  padding 4px 4px
  font-size 10pt
  &:hover
    background-color #E0E0E0

/************************
 * egrid functional style
 ***********************/

.egrid
  position relative
  display flex
  flex-direction column

.egrid-input
  z-index 99
  line-height normal
  position absolute

.egrid-head
  width 100%
  padding 0
  margin 0
  line-height 0
.egrid-head-cell
  line-height normal
  display inline-block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.egrid-scrollbox
  position relative
  width 100%
  height 100%
  overflow-y auto

.egrid-body
  width 100%
.egrid-body-row
  line-height 0
.egrid-body-cell
  line-height normal
  display inline-block
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  &:empty::before
    content ' '
    white-space pre

/**************************************
 * egrid theme
 */

.egrid-head
  background-color #F0F0F0
  border-bottom 1px solid #D0D0D0
  border-top 1px solid #D0D0D0
.egrid-head-cell
  padding 5px 5px
.egrid-body
  box-sizing border-box
.egrid-body-row
  border-bottom 1px solid #D0D0D0
  &:nth-child(even)
    background-color #F5F5F5
  &:hover > div
    background-color lighten(#13505B, 80%) !important
.egrid-body-cell, .egrid-input
  line-height normal
  font-size 9pt
  padding 3px 5px
.egrid-selected-row
  background-color lighten(#13505B, 90%) !important

.pending-row
  background-color #FFFFC0 !important
.too-far
  background-color #FFC0C0

#loading
  position absolute
  top 10px
  right 10px

/******************************************************************
 * skgrid
 */

adelay(delay)
  -webkit-animation-delay delay
  animation-delay delay

.sk-cube-grid
  width 40px
  height 40px

.sk-cube-grid .sk-cube
  width 33%
  height 33%
  background-color #50808E
  float left
  -webkit-animation sk-cubeGridScaleDelay 1.3s infinite ease-in-out
  animation sk-cubeGridScaleDelay 1.3s infinite ease-in-out

.sk-cube-grid .sk-cube1
  adelay(0.2s)
.sk-cube-grid .sk-cube2
  adelay(0.3s)
.sk-cube-grid .sk-cube3
  adelay(0.4s)
.sk-cube-grid .sk-cube4
  adelay(0.1s)
.sk-cube-grid .sk-cube5
  adelay(0.2s)
.sk-cube-grid .sk-cube6
  adelay(0.3s)
.sk-cube-grid .sk-cube7
  adelay(0s)
.sk-cube-grid .sk-cube8
  adelay(0.1s)
.sk-cube-grid .sk-cube9
  adelay(0.2s)

@-webkit-keyframes sk-cubeGridScaleDelay
  0%, 70%, 100%
    -webkit-transform scale3D(1, 1, 1)
    transform scale3D(1, 1, 1)
  35%
    -webkit-transform scale3D(0, 0, 1)
    transform scale3D(0, 0, 1)

@keyframes sk-cubeGridScaleDelay
  0%, 70%, 100%
    -webkit-transform scale3D(1, 1, 1)
    transform scale3D(1, 1, 1)
  35%
    -webkit-transform scale3D(0, 0, 1)
    transform scale3D(0, 0, 1)
